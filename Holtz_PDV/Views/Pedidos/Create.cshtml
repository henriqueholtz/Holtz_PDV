@model Holtz_PDV.Models.ViewModels.PedidoFromViewModel

@{

    ViewData["Title"] = "Cadastrar Pedido";
}
<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PedSts" class="control-label"></label>
                <select asp-for="PedSts" asp-items="@(new SelectList(Enum.GetValues(typeof(Holtz_PDV.Models.Enums.Status_Pedido))))" class="form-control">--Selecione--</select>
                <span asp-validation-for="PedSts" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PedDtaEms" class="control-label"></label>
                <input asp-for="PedDtaEms" class="form-control" />
                <span asp-validation-for="PedDtaEms" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PedDtaFat" class="control-label"></label>
                <input asp-for="PedDtaFat" class="form-control" />
                <span asp-validation-for="PedDtaFat" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClientePedCliCod" class="control-label"></label>
                <input asp-for="ClientePedCliCod" class="form-control" />
                <span asp-validation-for="ClientePedCliCod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-light">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}