@model Holtz_PDV.Models.ViewModels.EstadoFromViewModel
@{
    ViewData["Title"] = "Cadastrar Estado";
}
<h3>@ViewData["Title"]</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EstNom" class="control-label"></label>
                <input asp-for="EstNom" class="form-control" />
                <span asp-validation-for="EstNom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- ComboBox de Uf -->
                <label asp-for="EstUf" class="control-label"></label>
                <select asp-for="EstUf" asp-items="@(new SelectList(Model.UFs))" class="form-control">--Selecione--</select>
                <span asp-validation-for="EstUf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-light">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}