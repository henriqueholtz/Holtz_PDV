@model Holtz_PDV.Models.ViewModels.EstadoFromViewModel
@{
    ViewData["Title"] = "Excluir Estado";
}

<div class="alert-warning">
    <h3>@ViewData["Title"]</h3>
    <h3>Tem certeza que deseja excluir este Estado?</h3>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <!-- nome do campo -->
            @Html.DisplayNameFor(model => model.EstNom)
        </dt>
        <dd>
            <!-- valor do campo-->
            @Html.DisplayFor(model => model.EstNom)
        </dd>

        <dt>
            <!-- nome do campo -->
            @Html.DisplayNameFor(model => model.EstUf)
        </dt>
        <dd>
            <!-- valor do campo-->
            @Html.DisplayFor(model => model.EstUf)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EstCod" /> <!-- Campo oculto para enviar o comando delete -->
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-light">Voltar</a>
    </form>
</div>
