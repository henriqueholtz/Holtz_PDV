@model Holtz_PDV.Models.ViewModels.EstadoFromViewModel
@{
    ViewData["Title"] = "Editar Estado";
}
<h3>@ViewData["Title"]</h3>

<hr /> <!-- Quebra de linha -->
<div class="row">
    <!-- Vai garantir que a linha vai ocupar toda a tela -->
    <div class="col-md-4">
        <!-- Vai ocupar 1/3 da tela, pois o bootstrap divide em 12 partes, e estamos pegando 4 partes-->
        <form asp-action="Edit">
            <div class="form-group">
                <input type="hidden" max="8" asp-for="EstCod" />
                <label asp-for="EstNom" class="text-uppercase control-label">Nome</label>
                <input asp-for="EstNom" class="text-uppercase form-control" maxlength="8" />
                <span asp-validation-for="EstNom" class="text-uppercase text-danger"></span> <!-- msg erro em baixo do campo -->
            </div>
            <div class="form-group">
                <!-- ComboBox de Uf -->
                <label asp-for="EstUf" class="control-label"></label>
                <select asp-for="EstUf" asp-items="@(new SelectList(Model.UFs))" class="form-control">--Selecione--</select>
                <span asp-validation-for="EstUf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-light">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts { <!-- Para funcionar as validações (msg) a nivel de Java Script -->
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}