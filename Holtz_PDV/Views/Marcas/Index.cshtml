@model IEnumerable<Holtz_PDV.Models.Marca>
@{
    ViewData["Title"] = "Listagem de Marcas";
}
<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="text-uppercase bg-info">
            <th>
                @Html.DisplayNameFor(model => model.MarCod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarNom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarSts)
            </th>
            <th></th> <!-- Para criar uma titulo vazio para as funções editar, excluir etc -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MarCod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarNom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarSts)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MarCod">Editar </a>
                    <a asp-action="Details" asp-route-id="@item.MarCod">Detalhes </a>
                    <a asp-action="Delete" asp-route-id="@item.MarCod">Remover </a>
                </td>
            </tr>
        }
    </tbody>
</table>
