@model Holtz_PDV.Models.ViewModels.ClienteFromViewModel
@{
    ViewData["Title"] = "Editar Cliente";
}
<h3>@ViewData["Title"]</h3>


<hr /> <!-- Quebra de linha -->
<div class="row">
    <!-- Vai garantir que a linha vai ocupar toda a tela -->
    <div class="col-md-4">
        <!-- Vai ocupar 1/3 da tela, pois o bootstrap divide em 12 partes, e estamos pegando 4 partes-->
        <form asp-action="Edit">
            <div class="form-group">
                <input type="hidden" asp-for="Cliente.CliCod" />
                <label asp-for="Cliente.CliRaz" class="control-label">Nome/Razão</label>
                <input asp-for="Cliente.CliRaz" class="form-control" />
                <span asp-validation-for="Cliente.CliRaz" class="text-danger"></span> <!-- msg erro em baixo do campo -->
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CliNomFan" class="control-label"></label>
                <input asp-for="Cliente.CliNomFan" class="form-control" />
                <span asp-validation-for="Cliente.CliNomFan" class="text-danger"></span> <!-- msg erro em baixo do campo -->
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CliCpfCnpj" class="control-label"></label>
                <input asp-for="Cliente.CliCpfCnpj" class="form-control" />
                <span asp-validation-for="Cliente.CliCpfCnpj" class="text-danger"></span> <!-- msg erro em baixo do campo -->
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CliBai" class="control-label"></label>
                <input asp-for="Cliente.CliBai" class="form-control" />
                <span asp-validation-for="Cliente.CliBai" class="text-danger"></span> <!-- msg erro em baixo do campo -->
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CliRua" class="control-label"></label>
                <input asp-for="Cliente.CliRua" class="form-control" />
                <span asp-validation-for="Cliente.CliRua" class="text-danger"></span> <!-- msg erro em baixo do campo -->
            </div>
            <div class="form-group">
                <!-- ComboBox de Cidades -->
                <label asp-for="Cliente.CidCod" class="control-label"></label>
                <select asp-for="Cliente.CidCod" asp-items="@(new SelectList(Model.Cidades,"CidCod","CidNom"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts { <!-- Para funcionar as validações (msg) a nivel de Java Script -->
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}