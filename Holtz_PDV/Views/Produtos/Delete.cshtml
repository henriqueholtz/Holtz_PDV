@model Holtz_PDV.Models.ViewModels.ProdutoFromViewModel
@{
    ViewData["Title"] = "Deletar Produto";
}


<div class="alert-warning">
    <h3>@ViewData["Title"]</h3>
    <h3>Tem certeza que deseja excluir este Produto?</h3>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProCod)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProCod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProNom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProNom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProSts)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProSts)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProObs)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProObs)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProVlrCus)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProVlrCus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProVlrVen)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProVlrVen)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProCod" /> <!-- Campo oculto para enviar o comando delete -->
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-light">Voltar</a>
    </form>
</div>